<h1>IdeaBox</h1>

<h3>Here are the ideas in <%=search_group%></h3>

<ul>
  <form>
    <div class="row">
      <% ideas.each do |idea| %>
        <% if idea.group == search_group%>
          <%= erb :'partials/_idea', :layout => false, :locals => { :idea => idea} %>
        <% end %>
      <% end %>
    </div>
  </form>
</ul>
      
