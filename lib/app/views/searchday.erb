<h1>IdeaBox</h1>
<h3>Here are the ideas created on <%=search_by_day%></h3>
<ul>
  <form>
    <div class="row">
      <% ideas.each do |idea| %>
        <% if idea.day_of_the_week == search_by_day %>
          <%= erb :'partials/_idea', :layout => false, :locals => { :idea => idea} %>
        <% end %>
      <% end %>
    </div>
  </form>
</ul>
